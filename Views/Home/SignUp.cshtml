
@{
    ViewBag.Title = "SignUp";
}
@using University_Hub.Models
@model University_Hub.Models.user
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/bundles/jqueryval")
@*@model University_Hub.Models.UserProfile*@
@*<body style="background-image:url(../../Images/uni.jpg)">*@
    
@*<div style="padding-top:13%;margin-left:0%;margin-bottom:0%;margin-right:0%;background-image:url(../../Images/final.jpg);background-repeat:no-repeat;background-size:100% 100%;height:50%;">*@
<style>
    .field-validation-error{
        color:greenyellow;
    }
</style>
    <div class="row" style="margin-top:3%;padding-left:100px;padding-right:200px">
        <div class="container col-sm-4" style="padding-top:15px;padding-bottom:10px;background-color:rgba(13, 52, 1, 0.50)">
            
                @using (@Html.BeginForm("registered", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                <h1 style="font-family:monospace;color:whitesmoke">Sign Up</h1><br />
               @Html.ValidationMessageFor(x => x.name)
               @Html.TextBoxFor(x => x.name, htmlAttributes: new { @class = "form-control", @placeholder = "First Name" })<br>
               @Html.ValidationMessageFor(x => x.lname)
               @Html.TextBoxFor(x => x.lname, htmlAttributes: new { @class = "form-control", @placeholder = "Last Name" })<br> 
               @Html.TextBoxFor(x => x.email, htmlAttributes: new { @class = "form-control", @placeholder = "Email" })<br>
               @Html.PasswordFor(x => x.pass, htmlAttributes: new { @class = "form-control", @placeholder = "Password" })<br>
              <input style="font-family:monospace" type="radio"  name="gender" value="male" /><span style="color:white">Male </span>
              <input style="font-family:monospace" type="radio"  name="gender" value="female" /><span style="color:white">Female </span>

               @Html.TextBoxFor(x => x.contact, htmlAttributes: new { @class = "form-control", @placeholder = "Contact" })<br>
               @Html.TextBoxFor(x => x.Matric, htmlAttributes: new { @class = "form-control", @placeholder = "Matric Percentage" })<br>
               @Html.TextBoxFor(x => x.Intermediate, htmlAttributes: new { @class = "form-control", @placeholder = "Inter Percentage" })<br>
                                         
                <input type="file" class="form-control" name="Image" /><br>
               
                <input style="font-family:monospace" type="submit" value="SignUp" class="btn btn-warning" />


                }
        </div>
    </div>
   