<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />  

    

</head>

<body style="background-image:url(../../Images/final.jpg)">

    
   <header>
    <div class="container-fluid" style="background-color:rgba(13, 52, 1, 0.60);font-family:monospace">
        <div class="navbar-header" style="background-color:rgba(13, 52, 1, 0.50);">

            <a class="navbar-brand" href="/Home/Index"><span style="font-family:monospace;color:aliceblue;font-size:larger">University</span><span style="font-family:monospace;color:whitesmoke !important;">Hub</span></a>

        </div>
        <div class="float-right" style="background-color:rgba(13, 52, 1, 0.50);">
            <nav style="background-color:rgba(13, 52, 1, 0.50);">
                <ul class=" nav navbar-nav navbar-right" style="background-color:rgba(13, 52, 1, 0.50);">
                    <li style="background-color:rgba(13, 52, 1, 0.50);border-style:solid;border-right-color:rgba(13, 52, 1, 0.50);border-width:0px;border-right-width:3px;background: rgba(13, 52, 1, 0.50);text-shadow: 1px 2px 1px black">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li style="background-color:rgba(13, 52, 1, 0.50);border-style:solid;border-right-color:rgba(13, 52, 1, 0.50);border-width:0px;border-right-width:3px;background: rgba(13, 52, 1, 0.50); text-shadow:1px 2px 1px black">@Html.ActionLink("About", "About", "Home")</li>
                    <li style="background-color:rgba(13, 52, 1, 0.50);border-style:solid;border-right-color:rgba(13, 52, 1, 0.50);border-width:0px;border-right-width:3px;background: rgba(13, 52, 1, 0.50);text-shadow: 1px 2px 1px black">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li style="background-color:rgba(13, 52, 1, 0.50);border-style:solid;border-right-color:rgba(13, 52, 1, 0.50);border-width:0px;border-right-width:3px;background: rgba(13, 52, 1, 0.50);text-shadow: 1px 2px 1px black">@Html.ActionLink("LogOut", "LogOut", "Home")</li>

                </ul>
            </nav>
        </div>
    </div>
    </header>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
